# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Basic application settings
NODE_ENV=development
APP_NAME="Backend Starter Kit"
PORT=3000
FRONTEND_URL="http://localhost:5173"

# CORS Configuration
CORS_ORIGIN="*"

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database Connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/backend_starter_kit?schema=public

# ==============================================
# AUTHENTICATION & AUTHORIZATION
# ==============================================

# JWT Token Configuration
JWT_ACCESS_SECRET=your_very_strong_jwt_access_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your_very_strong_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRATION=7d

# Two-Factor Authentication
TWO_FACTOR_RECOVERY_CODES_COUNT=8

# ==============================================
# SECURITY & ENCRYPTION
# ==============================================

# Master Encryption Key (32 characters minimum)
MASTER_ENCRYPTION_KEY=your_very_secure_master_key_32_chars
ENCRYPTION_KEY_ROTATION_INTERVAL=90

# Password Hashing (Argon2)
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4
ARGON2_SALT_LENGTH=16

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Account Security
ACCOUNT_LOCKOUT_MAX_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15m

# Password Policy
PASSWORD_EXPIRY_DAYS=180
PASSWORD_EXPIRY_WARNING_DAYS=14
PASSWORD_EXPIRY_CHECK_ENABLED=true

# ==============================================
# SESSION MANAGEMENT
# ==============================================

# Session Configuration
SESSION_MAX_CONCURRENT_SESSIONS=3
SESSION_ALERT_EMAIL_ENABLED=true
SESSION_AUTO_REVOKE_ENABLED=true
SESSION_GEO_TRACKING_ENABLED=true

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Settings
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@your-domain.com
MAIL_ENCRYPTION=ssl

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log Settings
LOG_DIR=logs
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
